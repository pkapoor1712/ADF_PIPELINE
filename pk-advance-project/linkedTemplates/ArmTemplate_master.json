{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "pk-advance-project"
		},
		"ls_database_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'ls_database'"
		},
		"ls_datastore_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'ls_datastore'"
		},
		"RestService1_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://pokeapi.co/api/v2/pokemon"
		},
		"linked_service_to_cdc_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://raw.githubusercontent.com/pkapoor1712/ADVANCE_ADF_PROJECT/refs/heads/main/cdc.json"
		},
		"ls_database_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "pk-advanceserver.database.windows.net"
		},
		"ls_database_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "advancedb"
		},
		"ls_database_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "pkadmin"
		},
		"ls_datastore_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://pkadvancestorage.dfs.core.windows.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "pk-advance-project_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ls_database_password": {
						"value": "[parameters('ls_database_password')]"
					},
					"ls_datastore_accountKey": {
						"value": "[parameters('ls_datastore_accountKey')]"
					},
					"RestService1_properties_typeProperties_url": {
						"value": "[parameters('RestService1_properties_typeProperties_url')]"
					},
					"linked_service_to_cdc_properties_typeProperties_url": {
						"value": "[parameters('linked_service_to_cdc_properties_typeProperties_url')]"
					},
					"ls_database_properties_typeProperties_server": {
						"value": "[parameters('ls_database_properties_typeProperties_server')]"
					},
					"ls_database_properties_typeProperties_database": {
						"value": "[parameters('ls_database_properties_typeProperties_database')]"
					},
					"ls_database_properties_typeProperties_userName": {
						"value": "[parameters('ls_database_properties_typeProperties_userName')]"
					},
					"ls_datastore_properties_typeProperties_url": {
						"value": "[parameters('ls_datastore_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "pk-advance-project_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'pk-advance-project_ArmTemplate_0')]"
			]
		}
	]
}